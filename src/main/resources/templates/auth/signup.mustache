{{>layouts/header}}
<div class="container d-flex justify-content-center align-items-center py-5">
    <div class="card p-4" style="width: 400px;">
        <h2 class="text-center mb-4">회원가입</h2>
        {{#error}}
            <div class="alert alert-danger">{{error}}</div>
        {{/error}}
        <form action="/auth/signup" method="POST">
            <div class="mb-3">
                <input type="email" id="email" name="email" class="form-control" placeholder="이메일" required>
            </div>
            <div class="mb-3">
                <input type="text" id="name" name="name" class="form-control" placeholder="이름" required>
            </div>
            <div class="mb-3">
                <input type="password" id="password" name="password" class="form-control" placeholder="비밀번호" required>
            </div>
            <div class="mb-3">
                <input type="number" id="age" name="age" class="form-control" placeholder="나이" required min="1">
            </div>
            <div class="mb-3">
                <select id="gender" name="gender" class="form-control" required>
                    <option value="">성별 선택</option>
                    <option value="MALE">남성</option>
                    <option value="FEMALE">여성</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="text" id="job" name="job" class="form-control" placeholder="직업" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">회원가입</button>
        </form>
        <div class="mt-3 text-center">
            <a href="/auth/login">이미 계정이 있으신가요? 로그인하기</a>
        </div>
    </div>
</div>
{{>layouts/footer}}