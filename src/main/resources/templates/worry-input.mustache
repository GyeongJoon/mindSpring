{{>layouts/header}}
<div class="container py-5">
    <h2 class="mb-4">고민 입력</h2>
    <form action="/worries" method="POST">
        <div class="mb-4">
            <div class="btn-group w-100" role="group">
                <input type="radio" class="btn-check" name="category" id="cat1" value="RELATIONSHIP">
                <label class="btn btn-outline-primary" for="cat1">대인관계</label>

                <input type="radio" class="btn-check" name="category" id="cat2" value="CAREER">
                <label class="btn btn-outline-primary" for="cat2">진로</label>

                <input type="radio" class="btn-check" name="category" id="cat3" value="FAMILY">
                <label class="btn btn-outline-primary" for="cat3">가족</label>

                <input type="radio" class="btn-check" name="category" id="cat4" value="MENTAL">
                <label class="btn btn-outline-primary" for="cat4">정신건강</label>
            </div>
        </div>
        <div class="mb-3">
            <textarea name="content" class="form-control" rows="10" placeholder="고민을 자세히 적어주세요"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">고민 완료</button>
    </form>
</div>
{{>layouts/footer}}