{{>layouts/header}}
<div class="container py-5">
    <h2 class="mb-4">리뷰 작성</h2>
    <form action="/counselors/{{counselorId}}/reviews" method="POST">
        <div class="mb-3">
            <label class="form-label">별점</label>
            <div class="btn-group" role="group">
                {{#stars}}
                    <input type="radio" class="btn-check" name="rating" id="star{{.}}" value="{{.}}">
                    <label class="btn btn-outline-warning" for="star{{.}}">★</label>
                {{/stars}}
            </div>
        </div>
        <div class="mb-3">
            <textarea name="content" class="form-control" rows="5" placeholder="리뷰 내용을 작성해주세요"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">등록하기</button>
    </form>
</div>
{{>layouts/footer}}