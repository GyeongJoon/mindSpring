{{>layouts/header}}
<div class="container py-5">
    <h2 class="mb-4">고민 기록</h2>

    <!-- 그래프 -->
    <div class="card mb-4">
        <div class="card-body">
            <canvas id="worryChart"></canvas>
        </div>
    </div>

    <!-- 고민 리스트 -->
    <div class="list-group">
        {{#worries}}
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{category}}</h5>
                    <small>{{createdAt}}</small>
                </div>
                <p class="mb-1">{{content}}</p>
            </div>
        {{/worries}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('worryChart');
    new Chart(ctx, {
        type: 'pie',
        data: {
            labels: {{{categories}}},
        datasets: [{
            data: {{{categoryCount}}},
            backgroundColor: [
                'rgba(255, 99, 132, 0.8)',
                'rgba(54, 162, 235, 0.8)',
                'rgba(255, 206, 86, 0.8)',
                'rgba(75, 192, 192, 0.8)'
            ]
        }]
    }
});
</script>
